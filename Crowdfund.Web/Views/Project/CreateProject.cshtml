@model Crowdfund.Core.Services.Options.CreateProjectOptions

    <form method="post" class="js-create-project-form">
        <h2>Edit info</h2>
        <br />

        <!-- Title-->
        <div class="form-group">
            <label for="title">Title</label>
            <input name="title" placeholder="Enter the title of the project"
                   class="js-title form-control" value="@Model.Title">
        </div>

        <!-- Description -->
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="js-description form-control" placeholder="Enter description for your project" rows="5" value="@Model.Description"></textarea>
        </div>

        <!-- Total Fund -->
        <div class="form-group">
            <label for="totalFund">Total Fund</label>
            <input class="js-totalFund form-control" type="number" value="@Model.TotalFund">
        </div>

        <!-- VatNumber -->
        <div class="form-group">
            <label for="deadline">Deadline</label>
            <input class="js-deadline form-control" type="datetime" value="@Model.Deadline">
        </div>
        
        <!-- Submit -->
        <button type="button" class="btn btn-primary js-button">
            Submit
        </button>

        <div class="alert alert-success js-success-alert" role="alert">
        </div>

        <div class="alert alert-danger js-fail-alert" role="alert">
            Customer could not be updated
        </div>

    </form>