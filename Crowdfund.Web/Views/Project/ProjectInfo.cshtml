@model Crowdfund.Core.Models.Project
@{
    ViewData["Title"] = "Project Info";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="d-flex justify-content-center" style="margin-bottom: 50px;">
    <h1>
        Welcome to Project Info Page
    </h1>
</div>
<style>
    ul#opt li {
        display: inline;
    }
</style>

<div class="container-fluid bg-3 text-center">

    <div class="row">
        <div class="col-lg-5" style="padding-left: 150px;">

            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Media.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var m in Model.Media)
                    {
                        if (m.Category == Crowdfund.Core.Models.MediaCategory.Photo)
                        {
                            if (Model.Media.First() == m)
                            {
                                <div class="carousel-item active">
                                    <img src=@m.MediaLink class="d-block w-100" height="250">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src=@m.MediaLink class="d-block w-100" height="250">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item">
                                <iframe height="250" class="embed-responsive-item" src=@m.MediaLink allowfullscreen></iframe>
                            </div>
                        }

                    }
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!--Project card-->
        <div class="col-lg-5  ">
            <div class="card bg-light mb-3" style="width: 25rem; height: 250px;">

                <div class="card-header" style="font-size: 30px; text-align: left;">
                    <b>
                        @Model.Title
                    </b>
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="row">
                            <ul id="opt">
                                <li>
                                    <a href="@Url.Action("UpdateProject","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-edit-button" style="margin-right:15px; padding-bottom:4px; justify-content:center; text-align:center">
                                        Edit
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("AddMedia","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addmedia-button" style=" text-align:center">
                                        Add media
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                    <div class="card-body">
                        <div class="progress " style="background-color:grey">
                            <div @*id=".js-progress-bar"*@ class="progress-bar bg-success" role="progressbar" aria-valuenow="@(Model.CurrentFund/Model.TotalFund * 100)%"
                                 aria-valuemin="0" aria-valuemax="100"
                                 style="width:@(Model.CurrentFund/Model.TotalFund * 100)%">@(Model.CurrentFund/Model.TotalFund * 100)%</div>
                        </div>
                        <h5 class="card-title ">
                            <span class="tab-space" style="word-spacing:5px;">
                                Funded:@Model.CurrentFund$ Goal: @Model.TotalFund$
                            </span>
                        </h5>
                    </div>
                </div>

        </div>


    </div>
</div>

<!--Deyterh grammh-->
<div class="row">
    <ul class="nav nav-pills" style="padding-top:15px; padding-left: 350px;">
        <li class="nav-item">
            <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description-tab-area" role="tab" aria-controls="profile-tab-area" aria-selected="false">
                Description
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="statusupdate-tab" data-toggle="tab" href="#statusupdate-tab-area" role="tab" aria-controls="statusupdates-area" aria-selected="false">
                Recent Updates
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" id="reward-tab" data-toggle="tab" href="#reward-tab-area" role="tab" aria-controls="rewards" aria-selected="false">
                Rewards
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="reward-tab" data-toggle="tab" href="#updateproject-tab-area" role="tab" aria-controls="updateproject" aria-selected="false">
                Update Project
            </a>
        </li>
    </ul>

</div>
</div>
<div class="tab-content" id="myTabContent">
    <!-----Description Tab Area----->
    <div class="tab-pane fade show active" id="description-tab-area" role="tabpanel" aria-labelledby="Description">
        <div class="jumbotron">
            <textarea class="test" cols="100" rows="5" style="margin-top:4px; justify-content:center">@Model.Description</textarea>
        </div>
    </div>

    <!-----StatusUpdate Tab area----->
    <div class="tab-pane fade" id="statusupdate-tab-area" role="tabpanel" aria-labelledby="Recent Updates">
        <div class="tab-pane fade show active" id="description-tab-area" role="tabpanel" aria-labelledby="Description">
            <div class="jumbotron">
                <!--edw to button add statusupdate-->
                <h1 class="display-4">Welcome to project StatusUpdates Panel</h1>
                @if (Model.StatusUpdates.Any())
                {
                    foreach (var p in Model.StatusUpdates)
                    {
                        <p class="lead"> @p.Title</p>
                        <p class="lead"> @p.Description</p>
                        <p class="lead"> @p.UpdateCreated</p>
                        <a href="@Url.Action("UpdateStatusUpdate","Project",new { statusUpdateId = p.StatusUpdateId })" type="button" class="btn btn-primary js-projectinfo-updateStatusUpdate-button" style="float:right; width: 120px; height:45px;">
                            update status update
                        </a>

                    }
                }
                else
                {
                    <h1 class="display-4">not welcome to project StatusUpdates Panel</h1>
                }
                <a href="@Url.Action("AddStatusUpdate","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addstatusUpdate-button" style="float:right; width: 120px; height:45px;">
                    add status update
                </a>


            </div>
        </div>
    </div>

    <!-----Rewards----->
    <div class="tab-pane fade" id="reward-tab-area" role="tabpanel" aria-labelledby="Rewards">
        <div class="container">
            <div class="row">

                @foreach (var r in Model.AvailableRewards)
                {
                    <div class="col-sm-4">
                        <div class="card border-success mb-3" style="max-width: 15rem;">
                            <div class="card-header bg-transparent border-success " style="color:dimgrey">@r.Title</div>

                            <input class="js-rewardid @r.RewardId" type="number" value="@r.RewardId" style="display:none">

                            <div class="card-body text-success">
                                <h5 class="card-title" style="color:dimgrey">Description</h5>
                                <p class="card-text @r.RewardId" style="color:dimgrey">@r.Description.</p>
                            </div>

                            <div class="card-footer bg-transparent border-success" style="color:dimgrey">
                                Quantity
                                <input class="js-quantity @r.RewardId" type="number" style="border:2px solid dimgrey">
                            </div>

                            <div class="card-footer bg-transparent border-success" style="color:darkgreen; font-weight: bold">Price: @r.Price $</div>
                            <button type="button" class="btn btn-primary js-pledge-button" id=@r.RewardId>Pledge</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
            <a href="@Url.Action("AddReward","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addreward-button" style=" margin-right:15px; text-align:center">
                Add a new reward
            </a>
        </div>
    </div>
    <!--Update Project-->
    <div class="tab-pane fade" id="updateproject-tab-area" role="tabpanel" aria-labelledby="Update Project">
        <div class="container">
            <form id="profile-form" class="js-update-project-form" method="post">
                <div class="form-group">
                    <input name="Id" placeholder=""
                           class="form-control js-up-projectid" style="display:none" readonly value="@Model.ProjectId">
                </div>
                <div class="form-group">
                    <label for="@Html.NameFor(c=>c.Title)">Title</label>
                    <input name="Title" placeholder=""
                           class="form-control js-update-title" type="text" value="@Model.Title"
                           data-val="true" data-val-required data-val-length="Please enter up to 50 characters" 
                           data-val-length-max="50">
                    @Html.ValidationMessageFor(c=>c.Title)
                </div>

                <div class="form-group">
                    <label for="@Html.NameFor(c=>c.Description)">Description</label>
                    <textarea name="Description"class="form-control js-update-description" type="text" rows="5"
                              data-val="true" data-val-required
                              data-val-length data-val-length-max="100000">@Model.Description</textarea>
                    @Html.ValidationMessageFor(c => c.Description)
                </div>

                <div class="form-group">
                    <label for="@Html.NameFor(c=>c.TotalFund)">Total Fund</label>
                    <input name="Totalfund" placeholder=""
                           class="form-control js-update-totalfund" type="number" value="@decimal.ToDouble(Model.TotalFund)"
                           data-val="true" data-val-required="Please your new estimated totalfund amount">
                    @Html.ValidationMessageFor(c => c.TotalFund)
                </div>

                <div class="form-group">
                    <label for="@Html.NameFor(c=>c.Deadline)">Deadline</label>
                    <input name="Deadline" placeholder=""
                           class="form-control js-update-deadline" type="datetime-local" value="@Model.Deadline.ToString("s")" 
                           data-val="true" data-val-required />
                    @Html.ValidationMessageFor(c => c.Deadline)
                </div>
                <div class="form-group row">
                    <label for="@Html.NameFor(c => c.Category)">Project Category</label>
                    <select name="Category" id="inputCategory" class="js-update-category form-control">
                        <option value="" disabled selected hidden>Please choose your new category</option>
                        @{ foreach (var cat in Enum.GetNames(typeof(Crowdfund.Core.Models.ProjectCategory)))
                            {
                                <option>@cat</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(c => c.Category)
                </div>

                <button type="submit" class="btn btn-primary js-update-project-btn">Update</button>
                <div class="alert alert-success js-updateproject-success" style="display:none" role="alert">                    
                </div>

                <div class="alert alert-danger js-updateproject-failed" style="display:none" role="alert">
                </div>


            </form>

        </div>
    </div>
</div>




@section Scripts {
    <script src="~/js/FundProjects.js" asp-append-version="true"></script>
    <script src="~/js/UpdateProject.js" asp-append-version="true"></script>
}

