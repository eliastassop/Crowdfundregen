@model Crowdfund.Core.Models.Project
@{
    ViewData["Title"] = "Project Info";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="d-flex justify-content-center" style="margin-bottom: 50px;">
    <h1>
        Welcome to Project Info Page
    </h1>
</div>



<div class="container-fluid bg-3 text-center">

    <div class="row">
        <div class="col-lg-5" style="padding-left: 150px;">

            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">  
                        <img src="https://storcpdkenticomedia.blob.core.windows.net/media/recipemanagementsystem/media/recipe-media-files/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg" class="d-block w-100" alt="one pic" width="50" height="250">
                    </div>
                    <div class="carousel-item">
                        <img src="https://storcpdkenticomedia.blob.core.windows.net/media/recipemanagementsystem/media/recipe-media-files/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg" class="d-block w-100" alt="second pic" width="50" height="250">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.google.com/logos/doodles/2020/childrens-day-2020-june-01-6753651837108406-s.png" class="d-block w-100" alt="third pic" width="50" height="250">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!--Project card-->
        <div class="col-lg-5  ">
            <div class="card bg-light mb-3" style="width: 25rem; height: 250px;">

                <div class="card-header" style="font-size: 30px; text-align: left;">
                    <b>
                        @Model.Title
                    </b>
                    <button type="button" class="btn btn-primary js-projectinfo-edit-button" style="float:right; width: 120px; height:45px;">
                        Edit
                    </button>
                    <button type="button" class="btn btn-primary js-project-first-edit-button" style="float:right; width: 120px; height:45px;">
                        add reward
                    </button>
                    <button type="button" class="btn btn-primary js-project-first-edit-button" style="float:right; width: 120px; height:45px;">
                        add media
                    </button>
                </div>

                <div class="card-body">
                    <div class="progress " style="background-color:grey">
                        <div @*id=".js-progress-bar"*@ class="progress-bar bg-success" role="progressbar" aria-valuenow="0"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @(Model.CurrentFund / Model.TotalFund * 100)%">@(Model.CurrentFund / Model.TotalFund * 100)%</div>
                    </div>
                    <h5 class="card-title ">
                        Funded:
                        <span class="tab-space" style="word-spacing:30px;">
                            @Model.CurrentFund$
                        </span>Goal: @Model.TotalFund$

                    </h5>
                    @*<param name=".js-current-fund" value="@Model.CurrentFund" />
                        <param name=".js-total-fund" value="@Model.TotalFund" />*@

                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
           

        </div>
    </div>

    <!--Deyterh grammh-->
    <div class="row">
        <ul class="nav nav-pills" style="padding-top:15px; padding-left: 350px;">
            <li class="nav-item">
                <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description-tab-area" role="tab" aria-controls="profile-tab-area" aria-selected="false">
                    Description
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="statusupdate-tab" data-toggle="tab" href="#statusupdate-tab-area" role="tab" aria-controls="statusupdates-area" aria-selected="false">
                    Recent Updates
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="reward-tab" data-toggle="tab" href="#reward-tab-area" role="tab" aria-controls="rewards" aria-selected="false">
                    Rewards
                </a>
            </li>
        </ul>

    </div>
</div>
<div class="tab-content" id="myTabContent">
    <br />
    <!--Description Tab Area-->
    <div class="tab-pane fade show active" id="description-tab-area" role="tabpanel" aria-labelledby="Description" style="background-color: #f5f5f5;width: 46rem;border: 0.25rem solid #083f88; padding: 7rem; margin-left: 9rem;">
        kasdsdfg
    </div>


    <!--StatusUpdate Tab area-->
    <div class="tab-pane fade" id="statusupdate-tab-area" role="tabpanel" aria-labelledby="Recent Updates"  style="background-color: #f5f5f5;width: 46rem;border: 0.25rem solid #083f88; padding: 7rem; margin-left: 9rem;">
        safgasfgGDFS
    </div>

    <!--My Funded Projects-->
    <div class="tab-pane fade" id="reward-tab-area" role="tabpanel" aria-labelledby="Rewards" style="background-color: #f5f5f5;width: 46rem;border: 0.25rem solid #083f88; padding: 7rem; margin-left: 9rem;">
        GBFfghsx
    </div>
</div>




