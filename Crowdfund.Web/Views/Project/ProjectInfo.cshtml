@model Crowdfund.Core.Models.Project
@{
    ViewData["Title"] = "Project Info";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="d-flex justify-content-center" style="margin-bottom: 50px;">
    <h1>
        Welcome to Project Info Page
    </h1>
</div>



<div class="container-fluid bg-3 text-center">

    <div class="row">
        <div class="col-lg-5" style="padding-left: 150px;">

            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">  
                        <img src="https://storcpdkenticomedia.blob.core.windows.net/media/recipemanagementsystem/media/recipe-media-files/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg" class="d-block w-100" alt="one pic" width="50" height="250">
                    </div>
                    <div class="carousel-item">
                        <img src="https://storcpdkenticomedia.blob.core.windows.net/media/recipemanagementsystem/media/recipe-media-files/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg" class="d-block w-100" alt="second pic" width="50" height="250">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.google.com/logos/doodles/2020/childrens-day-2020-june-01-6753651837108406-s.png" class="d-block w-100" alt="third pic" width="50" height="250">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!--Project card-->
        <div class="col-lg-5  ">
            <div class="card bg-light mb-3" style="width: 25rem; height: 250px;">

                <div class="card-header" style="font-size: 30px; text-align: left;">
                    <b>
                        @Model.Title
                    </b>
                    <button type="button" class="btn btn-primary js-projectinfo-edit-button" style="float:right; width: 120px; height:45px;">
                        Edit
                    </button>
                    <button type="button" class="btn btn-primary js-project-first-edit-button" style="float:right; width: 120px; height:45px;">
                        add reward
                    </button>
                    <button type="button" class="btn btn-primary js-project-first-edit-button" style="float:right; width: 120px; height:45px;">
                        add media
                    </button>
                </div>

                <div class="card-body">
                    <div class="progress " style="background-color:grey">
                        <div @*id=".js-progress-bar"*@ class="progress-bar bg-success" role="progressbar" aria-valuenow="0"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @(Model.CurrentFund / Model.TotalFund * 100)%">@(Model.CurrentFund / Model.TotalFund * 100)%</div>
                    </div>
                    <h5 class="card-title ">
                        Funded:
                        <span class="tab-space" style="word-spacing:30px;">
                            @Model.CurrentFund$
                        </span>Goal: @Model.TotalFund$

                    </h5>
                    @*<param name=".js-current-fund" value="@Model.CurrentFund" />
                        <param name=".js-total-fund" value="@Model.TotalFund" />*@

                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
           

        </div>
    </div>

    <!--Deyterh grammh-->
    <div class="row">
        <ul class="nav nav-pills" style="padding-top:15px; padding-left: 350px;">
            <li class="nav-item">
                <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description-tab-area" role="tab" aria-controls="profile-tab-area" aria-selected="false">
                    Description
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="statusupdate-tab" data-toggle="tab" href="#statusupdate-tab-area" role="tab" aria-controls="statusupdates-area" aria-selected="false">
                    Recent Updates
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="reward-tab" data-toggle="tab" href="#reward-tab-area" role="tab" aria-controls="rewards" aria-selected="false">
                    Rewards
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="reward-tab" data-toggle="tab" href="#updateproject-tab-area" role="tab" aria-controls="updateproject" aria-selected="false">
                    Update Project 
                </a>
            </li>
        </ul>

    </div>
</div>
<div class="tab-content" id="myTabContent">
    <br />
    <!--Description Tab Area-->
    <div class="tab-pane fade show active" id="description-tab-area" role="tabpanel" aria-labelledby="Description" >
        <div class="jumbotron">
            <h1 class="display-4">Welcome to project Description Panel</h1>
            <p class="lead">@Model.Description</p>
            
            <!--isws scrollbar gia megala description-->
           
        </div>
    </div>


    <!--StatusUpdate Tab area-->
    <div class="tab-pane fade" id="statusupdate-tab-area" role="tabpanel" aria-labelledby="Recent Updates"  >
        <div class="tab-pane fade show active" id="description-tab-area" role="tabpanel" aria-labelledby="Description">
            <div class="jumbotron">
                <!--edw to button add statusupdate-->
                <h1 class="display-4">Welcome to project StatusUpdates Panel</h1>
                @if (Model.StatusUpdate.Any())
                {
                    foreach (var p in Model.StatusUpdate)
                    {
                        <p class="lead"> @p.Title</p>
                        <p class="lead"> @p.Description</p>
                        <p class="lead"> @p.UpdateCreated</p>

                    }
                }
                else
                {
                    <h1 class="display-4">not welcome to project StatusUpdates Panel</h1>
                }
                <a href="@Url.Action("stsupdatefunc","instatusupdatecontroler",new { id = @Model.ProjectId })" type="button" class="btn btn-primary">NA PATHEIS KATI KAKO SHMERA MPOURDELO MOU XEIS FAEI TH ZWH</a>



            </div>
        </div>
    </div>

    <!--Rewards-->
    <div class="tab-pane fade" id="reward-tab-area" role="tabpanel" aria-labelledby="Rewards">
        <div class="container">
            <div class="row">

                @foreach (var r in Model.AvailableRewards)
                {
                    <div class="col-sm-4">
                        <div class="card border-success mb-3" style="max-width: 15rem;">
                            <div class="card-header bg-transparent border-success " style="color:dimgrey">@r.Title</div>

                            <input class="js-rewardid @r.RewardId" type="number" value="@r.RewardId" style="display:none">

                            <div class="card-body text-success">
                                <h5 class="card-title" style="color:dimgrey">Description</h5>
                                <p class="card-text @r.RewardId" style="color:dimgrey">@r.Description.</p>
                            </div>

                            <div class="card-footer bg-transparent border-success" style="color:dimgrey">
                                Quantity
                                <input class="js-quantity @r.RewardId" type="text" style="border:2px solid dimgrey">
                            </div>

                            <div class="card-footer bg-transparent border-success" style="color:darkgreen; font-weight: bold">Price: @r.Price $</div>
                            <button type="button" class="btn btn-primary js-pledge-button" id=@r.RewardId>Pledge</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="updateproject-tab-area" role="tabpanel" aria-labelledby="Update Project">
        <div class="container">
            <form id="profile-form" class="profile page" method="post">
                <br />
                <img src="~/css/content.jpg" alt="Not Found" />
                <div class="form-group">
                    <label for="Id">Project Id</label>
                    <input name="Id" placeholder=""
                           class="form-control js-up-projectid" readonly value="@Model.ProjectId">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" placeholder=""
                           class="form-control js-update-title" type="text" value="@Model.Title">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control js-update-description" type="text" rows="5">@Model.Description</textarea>
                </div>

                <div class="form-group">
                    <label for="totalfund">Total Fund</label>
                    <input name="totalfund" placeholder=""
                           class="form-control js-update-totalfund" type="number" value="@decimal.ToDouble(Model.TotalFund)">
                </div>

                <div class="form-group">
                    <label for="deadline">Deadline</label>
                    <input name="deadline" placeholder=""
                           class="form-control js-update-deadline" type="datetime-local" value="@Model.Deadline.ToString("s")" />
                </div>
                <div class="form-group row">
                    <label for="category">Project Category</label>
                    <select id="inputCategory" class="js-update-category form-control">
                        <option selected>@Model.Category</option>
                        @{ foreach (var cat in Enum.GetNames(typeof(Crowdfund.Core.Models.ProjectCategory)))
                            {
                                <option>@cat</option>
                            }
                        }
                    </select>
                </div>

                <button type="button" class="btn btn-primary js-update-project">Update</button>
                <div class="alert alert-success js-updateproject-success" style="display:none" role="alert">
                    Your Project is up to date
                </div>

                <div class="alert alert-danger js-updateproject-failed" style="display:none" role="alert">
                    Something went wrong please try again
                </div>


            </form>

        </div>
    </div>
</div>




    @section Scripts {
            <script src="~/js/FundProjects.js" asp-append-version="true"></script>
            <script src="~/js/UpdateProject.js" asp-append-version="true"></script>
        }

