@model Crowdfund.Core.Models.Project
@{
    ViewData["Title"] = "Project Info";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="d-flex justify-content-center" style="margin-bottom: 50px;">
    <h1>
        Welcome to Project Info Page
    </h1>
</div>



<div class="container-fluid bg-3 text-center">

    <div class="row">
        <div class="col-lg-5" style="padding-left: 150px;">

            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Media.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                    }
                    </ol>
                <div class="carousel-inner">
                    @foreach (var m in Model.Media)
                    {
                        if (m.Category == Crowdfund.Core.Models.MediaCategory.Photo)
                        {
                            if (Model.Media.First() == m)
                            {
                                <div class="carousel-item active">
                                    <img src=@m.MediaLink class="d-block w-100"  height="250">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src=@m.MediaLink class="d-block w-100" height="250">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item">
                                <iframe height="250" class="embed-responsive-item" src=@m.MediaLink allowfullscreen></iframe>
                             </div>
                        }

                    }
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!--Project card-->
        <div class="col-lg-5  ">
            <div class="card bg-light mb-3" style="width: 25rem; height: 250px;">

                <div class="card-header" style="font-size: 30px; text-align: left;">
                    <b>
                        @Model.Title
                    </b>
                    <a href="@Url.Action("UpdateProject","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-edit-button" style="float:right; width: 120px; height:45px;">
                        Edit
                    </a>
                    <a href="@Url.Action("AddReward","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addreward-button" style="float:right; width: 120px; height:45px;">
                        add reward
                    </a>
                    <a href="@Url.Action("AddMedia","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addmedia-button" style="float:right; width: 120px; height:45px;">
                        add media
                    </a>
                    <a href="@Url.Action("AddStatusUpdate","Project",new { projectId = Model.ProjectId })" type="button" class="btn btn-primary js-projectinfo-addstatusUpdate-button" style="float:right; width: 120px; height:45px;">
                        add status update
                    </a>
                </div>

                <div class="card-body">
                    <div class="progress " style="background-color:grey">
                        <div @*id=".js-progress-bar"*@ class="progress-bar bg-success" role="progressbar" aria-valuenow="0"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @(Model.CurrentFund / Model.TotalFund * 100)%">@(Model.CurrentFund / Model.TotalFund * 100)%</div>
                    </div>
                    <h5 class="card-title ">
                        Funded:
                        <span class="tab-space" style="word-spacing:30px;">
                            @Model.CurrentFund$
                        </span>Goal: @Model.TotalFund$

                    </h5>
                    @*<param name=".js-current-fund" value="@Model.CurrentFund" />
                        <param name=".js-total-fund" value="@Model.TotalFund" />*@

                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
           

        </div>
    </div>

    <!--Deyterh grammh-->
    <div class="row">
        <ul class="nav nav-pills" style="padding-top:15px; padding-left: 350px;">
            <li class="nav-item">
                <a class="nav-link active" id="description-tab" data-toggle="tab" href="#profile-tab-area" role="tab" aria-controls="profile-tab-area" aria-selected="false">
                    Description
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="myprojects-tab" data-toggle="tab" href="#myprojects-tab-area" role="tab" aria-controls="myprojects-area" aria-selected="false">
                    Recent Updates
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#tab3" role="tab" aria-controls="contact" aria-selected="false">
                    Rewards
                </a>
            </li>
        </ul>

    </div>
</div>




