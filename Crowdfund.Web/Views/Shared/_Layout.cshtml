                    </li>*@
                    <li class="nav-item user-logo" style="margin-left:240px">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/Logo_230x30.png" /></a>
                    </li>
                    <!--Search bar-->
                    <li>
                        <form class="form-inline" method="get" action="/project/searchbytext">
                            <input class="form-control" type="search" name="text" value="" style="float:right" placeholder="Search Projects"><br>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                    </li>
