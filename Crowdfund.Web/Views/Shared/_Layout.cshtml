
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fund your Dreams</title>
    <link rel="icon" href="~/css/Mikro_icon_16x16.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/mycss.css" />
    <style>
        /*body {
            text-align: center;
        }*/
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar navbar-light " style="background-color:#fab414;">
            <div class="container col-xl-12 col-lg-10 col-md-8 col-sm-6 justify-content-center">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarText">

                    <ul class="navbar-nav flex-fill w-100 flex-nowrap">
                        <li class="nav-item">
                            <a class="btn btn-inverse navbar-btn" style="color:#083f88" href="#" title="Search" data-toggle="collapse" data-target="#nav2">
                                <span class="fa fa-fw fa-search"></span>
                            </a>
                        </li>
                        <li class="dropdown">
                            <button style="background-color:#083f88; color:#fdb813" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Explore
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @{ foreach (var cat in Enum.GetNames(typeof(Crowdfund.Core.Models.ProjectCategory)))
                                    {
                                        <a style="color:#083f88" class="dropdown-item" href="@Url.Action("Explore", "Home", new { category = cat })">@cat</a>
                                    }
                                }
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CreateProject">Start a Project</a>
                        </li>
                        <li class="nav-item user-login">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogIn"><i class="fa fa-fw fa-user"></i>Log In</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-fill justify-content-center">
                        <li class="nav-item user-logo">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/Logo_230x30.png" /></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-fill w-100 justify-content-end">
                        <li class="dropdown js-user-navbar">
                            <button style="background-color:#083f88; color:#fdb813" class="btn btn-secondary dropdown-toggle js-user-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu" aria-labelledby="userinfobutton">
                                <a href="#" class="dropdown-item text-dark js-user-pi " type="button"><i class="fa fa-info-circle" aria-hidden="true"></i>Info
                                </a>
                                <a href="#" class="dropdown-item text-dark js-user-logout" type="button"><i class="fa fa-sign-out"></i>Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
      
        <!--Colapsible Search Bar-->
        <div class="collapse " id="nav2">
            <form class="navbar-form" role="search" id="srch-frm" method="get" action="/project/searchbytext">
                <div class="input-group">
                    <input class="form-control typeahead" placeholder="Search Projects" name="text" id="srch-term" type="text" style="float:right"><br>
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-fw fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div><!--/.nav-collapse -->

    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Crowdfund.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
        </div>
    </footer>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Layout.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
