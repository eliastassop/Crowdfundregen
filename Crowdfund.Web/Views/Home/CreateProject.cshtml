@model Crowdfund.Core.Services.Options.CreateProjectOptions

<form method="post" class="js-create-project-form">
    <h2>Edit info</h2>
    <br />

    <!-- Title-->
    <div class="form-group row">
        <label for="title">Title</label>
        <input name="title" placeholder="Enter the title of the project"
               class="js-title form-control">
    </div>

    <!-- Description -->
    <div class="form-group row">
        <label for="description">Description</label>
        <textarea class="js-description form-control" placeholder="Enter description for your project" rows="5"></textarea>
    </div>

    <!-- Total Fund -->
    <div class="form-group row">
        <label for="totalFund">Total Fund</label>
        <input class="js-totalFund form-control" type="number">
    </div>

    <div class="form-group row">
        <label for="deadline">Deadline</label>
        <input class="js-deadline form-control" type="datetime-local" value=now id="example-datetime-local-input">
    </div>

    <div class="form-group row">
        <label for="image">Project Cover Photo</label>
        <input name="title" placeholder="Enter the external url for the cover photo of the project"
               class="js-media-input form-control">
    </div>

    @*<div class="form-group row">
        <input pattern=`/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/` required />
    </div>*@

    <div class="form-group row">
        <label for="category">Project Category</label>
        <select id="inputCategory" class="js-category form-control">
            <option selected>Pick a Category</option>
            @{ foreach (var cat in Enum.GetNames(typeof(Crowdfund.Core.Models.ProjectCategory)))
                {
                    <option>@cat</option>
                }
            }
        </select>
    </div>
    <div class="mb-3 pics animation all 2">
        <img src="https://storcpdkenticomedia.blob.core.windows.net/media/recipemanagementsystem/media/recipe-media-files/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg" alt="Girl in a jacket" width="150" height="150">
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary js-project-create-button">
        Create Project
    </button>

    <div class="alert alert-success js-project-create-success-alert" role="alert">
    </div>

    <div class="alert alert-danger js-project-create-fail-alert" role="alert">        
    </div>

</form>

<div class="jumbotron js-must-login-first">
    <h1 class="display-4">You must log in or create an account before starting a project.</h1>    
    <a class="btn btn-primary btn-lg js-explore-none-button" href="@Url.Action("LogIn","home")" role="button">Log in</a>
</div>

@section Scripts {
    <script src="~/js/CreateProject.js" asp-append-version="true"></script>
}