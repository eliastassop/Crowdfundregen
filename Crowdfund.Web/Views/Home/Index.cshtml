
@model TrendingRecentProjects


@{
    ViewData["Title"] = "Home Page";
}
<a href="@Url.Action("createproject","home")">
    <div>
        <div class="text-center">

            <p style="text-align: center;
            color: goldenrod;
            font-weight: bold; font-size:25px"> Start your Project</p>
        </div>

        <img src="~/css/fund.png" id="home-image" alt="fund" width="300" height="250">
    </div>
</a>
<br />

<p id="Browsing">Trending Projects</p>


<div class="container-fluid bg-2 text-center" style="margin-bottom:10px">
    <div class="row">
        @foreach (var p in Model.TrendingProjects)
        {
            <div class="col col-xl-2" style="margin-right:90px">
                <div class="card-deck" style="width: 12rem;">
                    <img src="~/css/nba.jpg" class="card-img-top" alt="Not Found">
                    <div class="card-body" style="background-color:#bbbbbb">
                        <h6 class="card-title" style="color:brown; font-size:15px; font-weight:bold">@p.Title</h6>
                        <p class="card-text" style="color:#b80d57; font-size:10px; font-weight:bold">@p.Deadline</p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@((int) (p.CurrentFund/p.TotalFund * 100))%"
                                 aria-valuemin="0" aria-valuemax="100" style=" width: @(p.CurrentFund/p.TotalFund * 100)%;">
                                @((int) (p.CurrentFund/p.TotalFund * 100))%
                            </div>
                        </div><br />
                        <a href="@Url.Action("ProjectInfo","Project",new { projectId = p.ProjectId })" type="button" class="btn btn-primary">See more</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />
<p id="Browsing">Latest Projects</p>
<div class="container-fluid bg-2 text-center ">
    <div class="row">
        @foreach (var p in Model.LatestProjects)
        {
