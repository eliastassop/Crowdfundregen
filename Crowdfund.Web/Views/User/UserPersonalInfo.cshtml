
@{
    ViewData["Title"] = "UserPersonalInfo";
}

<h1>Personal Information</h1>

@model Crowdfund.Core.Models.User
@{
    ViewData["Title"] = "UserPersonalInfo";
}

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Customer not found
    </div>

    return;
}

<div class="card">
    <div class="card-header">
        UserId: @Model.UserId
    </div>
    <div class="card-body">
        <h5 class="card-title">UserName: @Model.UserName</h5>
        <p class="card-text">
            Email:@Model.Email
            <br />
            DateCreated: @Model.UserCreated
        </p>
        <a href="@Url.Action("Edit", "User", new { id = Model.UserId })" class="btn btn-primary">Edit</a>
    </div>
</div>
